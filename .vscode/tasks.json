    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flet Build",
            "type": "shell",
            "command": ["flet"],
            "args": [
                "pack",
                "--name",
                "Telegram Migrator",
                "--product-name",
                "Telegram Migrator",
                "--product-version",
