{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "linux": {
        "options": {
            "shell": {
                "executable": "bash",
                "args": ["--init-file", "${workspaceFolder}/venv/bin/activate", "-ci"]
            },
        },
    },
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/C", "${workspaceFolder}\\venv\\bin\\activate", "&"]
            },
        },
    },
    "tasks": [
        {
            "label": "Syncogram Fast Build",
            "command": "flet",
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "args": [
                "pack",
                "--name",
                "Syncogram",
                "--product-name",
                "Syncogram",
                "--product-version",
                "0.0.1",
                "--company-name",
                "Syncogram Application",
                "--copyright",
                "GPLv3",
                // "--onedir", # ???
                // "dist", # Distanation folder
                "--icon",
                "${workspaceFolder}\\\\application\\\\assets\\\\logo\\\\icns\\\\duck512x512.icns",
                "${workspaceFolder}\\\\application\\\\application.py",
                "--yes"
            ]    
        }
    ],
}